#include <iostream>

class Node {
public:
    int data;
    Node* next;
    Node* prev;

    Node(int value) : data(value), next(nullptr), prev(nullptr) {}
};

class DoublyLinkedList {
private:
    Node* head;
    Node* tail;
    int size;

public:
    DoublyLinkedList() : head(nullptr), tail(nullptr), size(0) {}

    void add_to_beginning(int data) {
        Node* new_node = new Node(data);
        if (size == 0) {
            head = tail = new_node;
        } else {
            new_node->next = head;
            head->prev = new_node;
            head = new_node;
        }
        size++;
    }
void add_to_end(int data) {
        Node* new_node = new Node(data);
        if (size == 0) {
            head = tail = new_node;
        } else {
            new_node->prev = tail;
            tail->next = new_node;
            tail = new_node;
        }
        size++;
    }

    void add_at_index(int data, int index) {
        if (index < 0 || index > size) {
            std::cout << "Invalid index" << std::endl;
            return;
        }
        if (index == 0) {
            add_to_beginning(data);
        } else if (index == size) {
            add_to_end(data);
        } else {
            Node* new_node = new Node(data);
            Node* current = head;
            for (int i = 0; i < index; i++) {
                current = current->next;
            }
            new_node->prev = current->prev;
            new_node->next = current;
            current->prev->next = new_node;
            current->prev = new_node;
            size++;
        }
    }

void remove_from_beginning() {
        if (size == 0) {
            std::cout << "List is empty" << std::endl;
        } else {
            Node* temp = head;
            if (size == 1) {
                head = tail = nullptr;
            } else {
                head = head->next;
                head->prev = nullptr;
            }
            delete temp;
            size--;
        }
    }

    void remove_from_end() {
        if (size == 0) {
            std::cout << "List is empty" << std::endl;
        } else {
            Node* temp = tail;
            if (size == 1) {
                head = tail = nullptr;
            } else {
                tail = tail->prev;
                tail->next = nullptr;
            }
            delete temp;
            size--;
        }
    }
void remove_at_index(int index) {
        if (size == 0) {
            std::cout << "List is empty" << std::endl;
            return;
        }
        if (index < 0 || index >= size) {
            std::cout << "Invalid index" << std::endl;
            return;
        }
        if (index == 0) {
            remove_from_beginning();
        } else if (index == size - 1) {
            remove_from_end();
        } else {
            Node* current = head;
            for (int i = 0; i < index; i++) {
                current = current->next;
            }
            current->prev->next = current->next;
            current->next->prev = current->prev;
            delete current;
            size--;
        }
    }

 void display() {
        Node* current = head;
        while (current != nullptr) {
            std::cout << current->data << " ";
            current = current->next;
        }
        std::cout << std::endl;
    }

    void display_reverse() {
        Node* current = tail;
        while (current != nullptr) {
            std::cout << current->data << " ";
            current = current->prev;
        }
        std::cout << std::endl;
    }

    void clear() {
        while (size > 0) {
            remove_from_end();
        }
    }

    ~DoublyLinkedList() {
        clear();
    }
};

int main() {
    DoublyLinkedList myList;

    myList.add_to_end(1);
    myList.add_to_end(2);
    myList.add_to_end(3);
    myList.display(); // Output: 1 2 3

    myList.add_to_beginning(0);
    myList.display(); // Output: 0 1 2 3

    myList.add_at_index(4, 4);
    myList.display(); // Output: 0 1 2 3 4

    myList.remove_from_beginning();
    myList.display(); // Output: 1 2 3 4

    myList.remove_from_end();
    myList.display(); // Output: 1 2 3

    myList.remove_at_index(1);
    myList.display(); // Output: 1 3

    myList.display_reverse(); // Output: 3 1

    myList.clear();
    myList.display(); // Output: (empty)

    return 0;
}
